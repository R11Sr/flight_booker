<div class="section">
    <div class="container">
        <div class="column is-two-fifths is-offset-one-quarter">     
            <h2 class="title is-1">Select a Flight</h2>

            <%=search_form_for @search, url: flights_path do |f|%>
                Flight code:
                <%=f.select :flight_code_eq, options_for_select(@flight_code_list), include_blank: true%> <br>
                Flight date:
                <%=f.select :departure_details_eq, options_for_select(@dates_for_flights), include_blank: true%> <br>
                From:
                <%= f.select :from_airport_id_eq, options_for_select(@airports), include_blank: true%> <br>
                To:
                <%= f.select :to_airport_id_eq, options_for_select(@airports), include_blank: true%> <br>
                

                <%= f.submit "Search"%>
            <% end %>
        
           
        </div>
    </div>
</div>

<hr>

<div class="section">
    <%= simple_form_for :query, url: new_booking_path, method: :get do |f|%>
    <div class="container">
        <div class="column is-two-fifths is-offset-one-quarter">
                    <div class="field">
                        <div class="control">
                            <%= f.input :select_a_flight, as: :radio_buttons, collection: @flights,
                             label_method: :flight_details, value_method: :id, wrapper: false, label_html: {class: 'label'},
                             prompt: 'Select your Flight:' %>
                        </div>
                    </div>

        </div>
    </div>
    <div class="container">
        <div class="column is-two-fifths is-offset-one-quarter">
                <div class="field">
                    <div class="control">
                        <%=f.input :number_of_tickets, collection: 1..4,
                         input_html: {class: "input"}, wrapper: false, label_html: {class: 'label'}%>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <%=f.button :submit, 'Book Flight', class: 'button is-medium'%>
                    </div>
                </div>
        </div>
    </div>

    
    <% end %>
</div>




<br>

